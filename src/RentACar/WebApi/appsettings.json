{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "RentACar": "Server=(localdb)\\mssqllocaldb; Database=RentACarCourseDb; Trusted_Connection=true"
  },
  "CacheSettings": {
    "SlidingExpirationAsDay": 2
  },
  "SerilogConfigurations": {
    "FileConfiguration": {
      "FolderPath": "/logs/"
    },
    "MsSqlConfiguration": {
      "ConnectionString": "Server=(localdb)\\mssqllocaldb; Database=RentACarCourseDb; Trusted_Connection=true",
      "TableName": "Logs",
      "AutoCreateSqlTable": true
    }
  },
  "AllowedHosts": "*"
}
